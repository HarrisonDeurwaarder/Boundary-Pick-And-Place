{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File (project root)",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "args": [
                "--enable_cameras",
            ],
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "justMyCode": true,
        }
    ]
}